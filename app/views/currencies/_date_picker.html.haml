- today = Time.zone.today

= label_tag('', class: 'mdc-text-field mdc-text-field--outlined') do
  = date_field("currency",
               id,
               max: today,
               required: "required",
               value: selected_date,
               class: 'mdc-text-field__input unstyled mdc-text-field__input--date-pickable',
               aria: { labelledby: id })
  = hidden_field_tag("variables[#{id}]", selected_date)
  = tag.span(class: 'mdc-notched-outline') do
    = tag.span(class: 'mdc-notched-outline__leading')
    = tag.span(class: 'mdc-notched-outline__notch') do
      = tag.span(class: 'mdc-floating-label', id: id) do
        = text
    = tag.span(class: 'mdc-notched-outline__trailing')
